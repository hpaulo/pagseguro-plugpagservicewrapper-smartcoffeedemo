<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/white"
                                             android:clickable="true"
                                             android:focusable="true">

    <Button
        android:id="@+id/btn_authentication_check"
        style="@style/custom_button_style"
        android:layout_height="wrap_content"
        android:text="@string/btn_authentication_check"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_authentication_request"
        style="@style/custom_button_style"
        android:layout_height="wrap_content"
        android:text="@string/btn_authentication_request"
        app:layout_constraintTop_toBottomOf="@+id/btn_authentication_check"/>

    <Button
        android:id="@+id/btn_authentication_invalidate"
        style="@style/custom_button_style"
        android:layout_height="wrap_content"
        android:text="@string/btn_authentication_deactivate"
        app:layout_constraintTop_toBottomOf="@+id/btn_authentication_request"/>

</androidx.constraintlayout.widget.ConstraintLayout>